<%
  url = locals[:url]
  alt = locals[:description] || locals[:title]

  classes = locals[:classes] || []
  classes << ['section__image']
  classes << 'section__image--icon' if locals[:icon]

  # NOTE: Match these in source/css/sections/_image.scss
  max_width = 300
  max_width = 175 if locals[:icon]

  url += "?w=#{max_width}"
%>

<% if url %>
  <img src="<%= url %>" alt="<%= alt %>" class="<%= classes.join(' ') %>" />
<% end %>
