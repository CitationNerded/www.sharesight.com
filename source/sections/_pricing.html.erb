<%
  locale_obj = locals[:locale_obj] || current_locale_obj
  plans = locale_plans(locale_obj[:id])
  title = locals[:title] || 'Pricing'
%>

<div class="section section_pricing">
  <div class="pricing__container">
    <section class="pricing__intro--home">
      <h2><%= title %></h2>
      <p>
        Your first <%= plans[0][:holdings] %> holdings are <strong>free!</strong>
      </p>

      <p>
        Choose from any of our premium plans at any time to track additional
        holdings or portfolios, and unlock advanced features.
      </p>

      <a href="<%= localize_url("pricing", locale_id: locale_obj[:id]) %>" class="btn btn--secondary btn--solid" title="Learn more about our Pricing">
         explore our pricing
      </a>

      <a href="<%= config[:signup_url] %>" class="btn btn--pro btn--solid" title="Sign up for Sharesight">
         get started – <strong>for free</strong>
      </a>
    </section>
  </div>
</div>
